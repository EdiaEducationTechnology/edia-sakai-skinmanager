<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="newSkin" />

	<view-state id="newSkin" view="new">
		<transition on="submit" to="uploadSkin">
		</transition>
		<transition on="cancel" to="finish" />
	</view-state>

	<action-state id="uploadSkin">
		<evaluate-action expression="requestParameters.id">
			<evaluation-result name="id" scope="flash" />
		</evaluate-action>
		<action bean="uploadFileAction">
			<attribute name="new" type="boolean" value="true"></attribute>
		</action>
		<transition on="success" to="finish" />
		<transition on="error" to="newSkin" />
		<transition on-exception="java.lang.Exception" to="newSkin"/>
	</action-state>

	<end-state id="finish" />

</flow>