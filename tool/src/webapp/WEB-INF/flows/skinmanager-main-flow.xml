<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="listSkins" />

	<view-state id="listSkins" view="index">
		<render-actions>
			<bean-action bean="nl.edia.sakai.tool.skinmanager.SkinService" method="fetchInstalledSkins">
				<method-result name="skins" />
			</bean-action >
		</render-actions>
		<transition on="edit" to="viewDetail" />
		<transition on="new" to="newSkin" />
		<transition on-exception="nl.edia.sakai.tool.skinmanager.SkinException" to="showAccessDenied"/>
		<transition on-exception="java.lang.Exception" to="showError"/>
	</view-state>

	<view-state id="showError" view="error">
		<transition on="retry" to="finish" />
	</view-state>
	
	<view-state id="showAccessDenied" view="accessdenied">
		<transition on="retry" to="finish" />
	</view-state>


	<subflow-state flow="skinmanager-detail-flow" id="viewDetail">
		<attribute-mapper>
			<input-mapper>
				<mapping source="requestParameters.id" target="id" required="true"/>
			</input-mapper>
		</attribute-mapper>		
		<transition on="finish" to="finish" />
	</subflow-state>

	<subflow-state flow="skinmanager-new-flow" id="newSkin">
		<transition on="finish" to="finish" />
	</subflow-state>

	<end-state id="finish" view="flowRedirect:skinmanager-main-flow" />
</flow>