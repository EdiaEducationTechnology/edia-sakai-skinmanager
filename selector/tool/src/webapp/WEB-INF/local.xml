<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<import resource="controllers.xml" />
	<bean id="nl.edia.sakai.tool.skinmanager.HandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="interceptors">
			<list>
			</list>
		</property>
		<property name="mappings">
			<props>
				<prop key="index.spring">nl.edia.sakai.tool.skinselector.SkinSelectorController</prop>
			</props>
		</property>
		<property name="defaultHandler" ref="nl.edia.sakai.tool.skinselector.SkinSelectorController" />
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
	</bean>

	<!-- 
		Locale resolver
	-->
	<bean id="nl.edia.sakai.tool.skinmanager.LocaleResolver" class="nl.edia.masla.spring.web.servlet.SakaiLocaleResolver"></bean>

	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename" value="Messages-SkinSelector" />
		<property name="useCodeAsDefaultMessage" value="true" />
	</bean>


</beans>